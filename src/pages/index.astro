---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import ThemeIcon from "../components/ThemeIcon.astro";
---

<Layout>
	<main class="w-full h-screen">
		<!-- <ThemeIcon /> -->
		<header
			class=" h-[100dvh] text-[128px] flex flex-col justify-center text-primary dark:text-primary-dark w-fit m-auto"
		>
			<h1 class="leading-[9rem]">Hi! My name is</h1>
			<h1 class="text-main text-[250px] leading-[12rem] font-medium">
				Gerard Costa
			</h1>
			<h1 class="leading-[9rem]">
				I'm a <span class="font-medium">Full Stack developer</span>
			</h1>
			<h1 class="leading-[9rem]">
				and <span class="text-main font-medium">
					(list of adjectives)
				</span>
			</h1>
		</header>
	</main>
</Layout>
